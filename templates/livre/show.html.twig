{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 d-flex justify-content-around flex-wrap">
            {# Boucle sur le tableau $livres du controller #}
            {% for key, item in livres %}
                <div class="card" style="width: 450px; margin-top: 50px;">
                    <div class="card-body">
                        <h5 class="card-title">{{ item.getTitre }}</h5>
                        <p class="card-text">{{ item.getAuteur}}</p>
                        <a href="#"class="btn btn-primary">Show</a>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}